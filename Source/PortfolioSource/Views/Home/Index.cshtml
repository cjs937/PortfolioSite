@using PortfolioSource.Models

@{
    ViewData["Title"] = "Portfolio Home";
}

<!-- Masthead-->
<header class="masthead bg-primary text-white text-center">
    <div class="container d-flex align-items-center flex-column">
        <!-- Masthead Avatar Image-->
        <img class="masthead-avatar mb-5" src="assets/img/headshot.jpg" alt="..." />
        <!-- Masthead Heading-->
        <h1 class="masthead-heading text-uppercase mb-0">Cory Smith</h1>
        <!-- Icon Divider-->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-chess-king"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Masthead Subheading-->
        <p class="masthead-heading-padded font-weight-light mb-0">Full-Stack Development</p></br>
        <p class="masthead-subheading font-weight-light mb-0">Systems</p></br>
        <p class="masthead-subheading font-weight-light mb-0">Tools</p></br>
